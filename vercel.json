{
    "version": 2,
    "builds": [
        { "src": "api/index.php", "use": "vercel-php@0.3" },
        { "src": "/public/**", "use": "@vercel/static" }
    ],
    "routes": [
        {
            "src": "/(assets|images)/(.*)",
            "dest": "public/assets/$1/$2"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ]
}
